# Sanity Configuration
NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_SANITY_DATASET=production

# Cloudflare R2 Configuration
CLOUDFLARE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
CLOUDFLARE_R2_ACCESS_KEY_ID=your_access_key_here
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_secret_key_here
CLOUDFLARE_R2_BUCKET_NAME=your_bucket_name_here

# Site URL (for cache warming)
PUBLIC_BASE_URL=https://your-domain.vercel.app

# Revalidation Secret (generate a random string for on-demand revalidation)
# Used by Sanity webhook to trigger cache invalidation when content is published
# Generate a strong random string: openssl rand -base64 32
REVALIDATE_SECRET=your_random_secret_string_here


# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here
